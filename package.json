{
  "private": true,
  "name": "@dahlia-labs/dahlia-common",
  "description": "Common libraries across Dahlia projects.",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@rushstack/eslint-patch": "^1.1.4",
    "@size-limit/file": "^8.0.1",
    "@size-limit/webpack": "^8.0.1",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/source-map-support": "^0.5.6",
    "@yarnpkg/doctor": "^3.1.4",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.3",
    "eslint": "^8.23.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "jsbi": "^4.3.0",
    "lerna": "^5.4.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "size-limit": "^8.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.11",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "lerna run build",
    "typecheck": "tsc",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs:generate": "typedoc --excludePrivate --includeVersion --out docs/ packages/**/src/index.{ts,tsx}",
    "test": "jest **/*.test.ts",
    "doctor:packages": "yarn doctor packages/"
  },
  "version": "0.0.0",
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@saberhq/eslint-config": "^2.0.4",
    "@saberhq/eslint-config-react": "^2.0.4",
    "@saberhq/tsconfig": "^1.13.32",
    "ts-jest": "^28.0.8"
  }
}
