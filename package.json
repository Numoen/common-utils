{
  "private": true,
  "type": "module",
  "name": "@dahlia-labs/dahlia-common",
  "description": "Common libraries across Dahlia projects.",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/types": "^29.0.2",
    "@rushstack/eslint-patch": "^1.1.4",
    "@saberhq/eslint-config": "^2.0.4",
    "@saberhq/eslint-config-react": "^2.0.4",
    "@saberhq/tsconfig": "^2.0.4",
    "@size-limit/file": "^8.0.1",
    "@size-limit/webpack": "^8.0.1",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/bn.js": "^5.1.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.15",
    "@types/source-map-support": "^0.5.6",
    "@typescript-eslint/utils": "^5.36.2",
    "@yarnpkg/doctor": "^4.0.0-rc.18",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.3",
    "eslint": "^8.23.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-runtime": "^29.0.2",
    "jsbi": "^4.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "size-limit": "^8.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.14",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "yarn workspaces foreach --exclude @dahlia-labs/dahlia-common -ptv run build",
    "clean": "yarn workspaces foreach --exclude @dahlia-labs/dahlia-common -ptv run clean",
    "publish:all": "yarn workspaces foreach --exclude @dahlia-labs/dahlia-common -ptv npm publish",
    "typecheck": "tsc --build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs:generate": "typedoc --excludePrivate --includeVersion --out docs/ --entryPointStrategy packages --includes packages/ $(find ./packages -mindepth 1 -maxdepth 1 | grep -v browserslist)",
    "test": "jest **/*.test.ts",
    "doctor:packages": "yarn doctor packages/"
  },
  "version": "0.0.1",
  "packageManager": "yarn@3.2.3"
}
